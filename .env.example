# Persona Testing Configuration
NEXT_PUBLIC_TRUSTMESH_PERSONA=civic
NEXT_PUBLIC_ENABLE_PERSONA_SWITCHER=true

# Magic.link - Get from: https://dashboard.magic.link
NEXT_PUBLIC_MAGIC_PUBLISHABLE_KEY=pk_live_your_key_here
MAGIC_SECRET_KEY=sk_live_your_secret_here

# Hedera Testnet Configuration
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_OPERATOR_ID=0.0.your_account_id
NEXT_PUBLIC_HEDERA_OPERATOR_KEY=your_private_key_here

# Server-side Hedera vars (needed by API routes)
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.your_account_id
HEDERA_OPERATOR_KEY=your_private_key_here

# HCS Topics - Your topic IDs
NEXT_PUBLIC_HCS_RECOGNITION_TOPIC=0.0.your_topic
NEXT_PUBLIC_TOPIC_RECOGNITION=0.0.your_topic
NEXT_PUBLIC_TOPIC_CONTACT=0.0.your_topic
NEXT_PUBLIC_TOPIC_TRUST=0.0.your_topic
NEXT_PUBLIC_TOPIC_SIGNAL=0.0.your_topic
NEXT_PUBLIC_TOPIC_PROFILE=0.0.your_topic
NEXT_PUBLIC_PROFILE_TOPIC_ID=0.0.your_topic
NEXT_PUBLIC_TRST_TOKEN_ID=0.0.your_token

# Server-side HCS topic vars (needed by API routes)
TOPIC_CONTACT=0.0.your_topic
TOPIC_TRUST=0.0.your_topic
TOPIC_SIGNAL=0.0.your_topic
TOPIC_RECOGNITION=0.0.your_topic
TOPIC_PROFILE=0.0.your_topic

# Feature Flags
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_HCS_ENABLED=true

# Cultural Overlay HCS Topics
NEXT_PUBLIC_TOPIC_RECOGNITION_BASE=0.0.your_topic
NEXT_PUBLIC_TOPIC_RECOGNITION_GENZ=0.0.your_topic
NEXT_PUBLIC_TOPIC_RECOGNITION_AFRICAN=0.0.your_topic

# Admin seed secret for catalog deployment
ADMIN_SEED_SECRET=change-this-in-production

# Lens Feature Flags
TRUSTMESH_SINGLE_LENS=base
NEXT_PUBLIC_ENABLE_LENS_SWITCHER=false
ENABLE_LENS_UNLOCK=false
HCS22_ENABLED=true
HCS22_ASSERT_SAMPLING=1.0
HCS22_LOG_LEVEL=info
HCS22_IDENTITY_TOPIC_ID=0.0.your_topic
HCS22_DID_SALT=your_salt_here
HCS22_REFRESH_INTERVAL_MINUTES=5

# XMTP Configuration
NEXT_PUBLIC_XMTP_ENABLED=true
NEXT_PUBLIC_XMTP_ENV=dev

# HCS Ingestion Configuration
NEXT_PUBLIC_HCS_WS_ENABLED=false
HCS_REST_POLL_INTERVAL=5000
