# TrustMesh Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Hedera Configuration
HEDERA_NETWORK=testnet
HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
HEDERA_OPERATOR_KEY=302e020100300506032b6570042204...

# Public environment variables (accessible in frontend)
NEXT_PUBLIC_HEDERA_NETWORK=testnet
NEXT_PUBLIC_HEDERA_OPERATOR_ID=0.0.YOUR_ACCOUNT_ID
NEXT_PUBLIC_HEDERA_OPERATOR_KEY=302e020100300506032b6570042204...

# Magic.link Configuration
MAGIC_PUBLISHABLE_KEY=pk_live_or_test_...
MAGIC_SECRET_KEY=sk_live_or_test_...

# Public Magic.link keys (accessible in frontend)
NEXT_PUBLIC_MAGIC_PUBLISHABLE_KEY=pk_live_or_test_...

# HCS Topics (populated automatically by setup script)
TOPIC_PROFILE=
TOPIC_CONTACT=
TOPIC_TRUST=
TOPIC_SIGNAL=

# Public topic IDs (accessible in frontend)
NEXT_PUBLIC_TOPIC_PROFILE=
NEXT_PUBLIC_TOPIC_CONTACT=
NEXT_PUBLIC_TOPIC_TRUST=
NEXT_PUBLIC_TOPIC_SIGNAL=
NEXT_PUBLIC_TOPIC_RECOGNITION_BASE=0.0.5438869

# Treasury Configuration
TRST_FEE_SINK_ACCOUNT_ID=0.0.YOUR_FEE_SINK_ACCOUNT

# NFT Configuration (Optional - for Phase 2)
RECOGNITION_NFT_TOKEN_ID=

# Mirror Node Configuration
MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com
MIRROR_NODE_WS=wss://testnet.mirrornode.hedera.com

# Public Mirror Node URLs (accessible in frontend)
NEXT_PUBLIC_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com
NEXT_PUBLIC_MIRROR_NODE_WS=wss://testnet.mirrornode.hedera.com

# Brale Integration (Phase 2)
BRALE_API_URL=https://api.brale.com
BRALE_API_KEY=your_brale_api_key_here
BRALE_CLIENT_ID=your_brale_client_id_here

# Development Settings
NODE_ENV=development
DEBUG_HCS=true
LOG_LEVEL=debug

# Lens Feature Flags (Hackathon Rollback)
# Force single-lens mode and hide UI
TRUSTMESH_SINGLE_LENS=base           # 'base' | 'genz' | 'african'
NEXT_PUBLIC_ENABLE_LENS_SWITCHER=false
ENABLE_LENS_UNLOCK=false

# HCS-22 Dual-Key Identity Binding (Phase 3+)
# Cryptographically verifiable binding between Magic EVM keys and Hedera accounts
HCS22_ENABLED=false                   # Set to 'true' to enable HCS-22 identity registry
HCS22_IDENTITY_TOPIC_ID=              # HCS topic ID for identity binding events (e.g., 0.0.123456)
HCS22_ASSERT_SAMPLING=1.0             # Sampling rate for ASSERT events (0.0-1.0, 1.0=100% in staging)
HCS22_LOG_LEVEL=info                  # Logging verbosity: debug, info, warn, error
