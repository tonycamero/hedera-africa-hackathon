generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ConsentLog {
  id      String   @id
  issuer  String
  channel String
  action  String
  ts      DateTime @default(now())
}

model ContactBond {
  id         String   @id
  inviterDid String
  inviteeDid String
  source     String   @default("invite_accept")
  createdAt  DateTime @default(now())

  @@unique([inviterDid, inviteeDid])
  @@index([inviterDid])
}

model Event {
  id        String   @id
  title     String
  startsAt  DateTime
  location  String
  details   String?
  createdAt DateTime @default(now())
}

model Invite {
  slug             String             @id
  inviterDid       String
  ward             String
  maxUses          Int                @default(1)
  createdAt        DateTime           @default(now())
  usesCount        Int                @default(0)
  InviteAcceptance InviteAcceptance[]
}

model InviteAcceptance {
  id         String   @id
  slug       String
  inviteeDid String
  createdAt  DateTime @default(now())
  Invite     Invite   @relation(fields: [slug], references: [slug], onDelete: Cascade)

  @@unique([slug, inviteeDid])
  @@index([slug])
}

model User {
  id             String   @id
  issuer         String   @unique
  ward           String?
  createdAt      DateTime @default(now())
  email          String?  @unique
  emailOptIn     Boolean  @default(false)
  directoryOptIn Boolean  @default(false)
  displayName    String?
}
